<div class="header">
  <div class="container">
    <div class="row">
      <div class="col-xs-6">Liquid Fire</div>
      <div class="col-xs-6 mark-holder">
        <a href="https://github.com/ember-animation/liquid-fire/">
          <img src="{{rootURL}}GitHub-Mark-Light-32px.png">
        </a>
      </div>
    </div>
  </div>
</div>

<div class="container main">
  <div>
    <div class="content">
      <div class="clearfix">
        {{nav-link topic=prevTopic direction="back"}}
        {{nav-link topic=nextTopic direction="forward"}}
      </div>
      {{outlet}}
      <div class="clearfix">
        {{nav-link topic=prevTopic direction="back"}}
        {{nav-link topic=nextTopic direction="forward"}}
      </div>
    </div>

    <ul>
      {{#each tableOfContents key="route" as |entry|}}
      <li>
        {{#if entry.route}}
          {{#link-to entry.route}}{{entry.title}}{{/link-to}}
        {{else}}
          {{entry.title}}
        {{/if}}

        {{#if entry.children}}
          <ul>
          {{#each entry.children key="route" as |child|}}
            <li>
              {{#if child.route}}
                {{#link-to child.route}}{{child.title}}{{/link-to}}
              {{else}}
                {{child}}
              {{/if}}
            </li>
          {{/each}}
          </ul>
        {{/if}}
      </li>
      {{/each}}
    </ul>
  </div>
</div>

{{grid-overlay}}
